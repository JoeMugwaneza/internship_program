<!DOCTYPE html>
<html>
<head>
  <% content_for :title do %>
    <title>Sign in | Internship Program</title>
  <% end %>

  <style type="text/css">
    .mynavbar {
      display: none
    }
  </style>

</head>
<body class="signup">

  <section class="col-md-4 col-xs-10 col-md-offset-4 col-xs-offset-1">
  <div class="main">  
    <div class="w3layouts_main agileinfo w3">   
      <h1 class="w3_agileits w3ls">Sign In</h1>
    </div>
  </div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.text_field :login, placeholder: "Enter id number or email address", class:"form-control", placeholder:"Email . . ." %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder:"Password . . ." %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class:"btn btn-default" %>
  </div>
<% end %>

<p>Don't have an account? <a class="btn btn-info" href="users/sign_up" style="border: none; background-color: none; text-decoration: underline;">Register</a></p>

<%#= render "users/shared/links" %>
</section>
</body>
</html>
