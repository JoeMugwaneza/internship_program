<!DOCTYPE html>
<html>
<head>
  <title></title>
  <% content_for :title do %>
  <title>Register | Internship Program</title>
  <% end %>

  <style type="text/css">
    .mynavbar {
      display: none
    }
  </style>
</head>
<body class="signup">

  <div class="main">  
    <div class="w3layouts_main agileinfo w3">   
      <h1 class="w3_agileits w3ls">Register</h1>
    </div>
  </div>
  <section class="col-md-6 col-xs-10 col-md-offset-3 col-xs-offset-1">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>


    <div class="row">     
      <div class="field col-md-4">
        <%= f.text_field :first_name, autocomplete: "off", class:"form-control", placeholder:"First Name..." %>
      </div>

      <div class="field col-md-4">
        <%= f.text_field :last_name, autocomplete: "off", class:"form-control", placeholder:"Last Name..." %>
      </div>
      <div class="field col-md-4">
        <%= f.text_field :id_number, autocomplete: "off", class:"form-control", placeholder:"ID No..." %>
      </div>
    </div>

    <div class="row">    
    <div class="field col-md-4">
      <%= f.text_field :district, autocomplete: "off", class:"form-control", placeholder:"District..." %>
    </div>

    <div class="field col-md-4">
      <%= f.text_field :sector, autocomplete: "off", class:"form-control", placeholder:"Sector..." %>
    </div>

    <div class="field col-md-4">
      <%= f.text_field :cell, autocomplete: "off", class:"form-control", placeholder:"Cell..." %>
    </div>
  </div>


    <div class="row">
     <div class="field">
      <div class="col-md-6">
        <%= f.radio_button :is_female, true %> <%= f.label :is_female, "Female" %><br/>        
      </div>
      <div class="col-md-6">
        <%= f.radio_button :is_female, false %> <%= f.label :is_female, "Male" %>
      </div>
    </div>
  </div>

  <div class="row">    
    <div class="field col-md-6">
      <%= f.text_field :tel, autocomplete: "off", class:"form-control", placeholder:"Telephone..." %>
    </div>

    <div class="field col-md-6">
      <%= f.text_field :email, autofocus: true, autocomplete: "off", class:"form-control", placeholder:"Email..." %>
    </div>
  </div>


  <div class="row">    
    <div class="field col-md-6">
      <%= f.text_field :college, autocomplete: "off", class:"form-control", placeholder:"College/University..." %>
    </div>

    <div class="field col-md-6">
      <%= f.text_field :field_of_studies, autocomplete: "off", class:"form-control", placeholder:"Faculty/Major..." %>
    </div>
  </div>

  <div class="row">
    <div class="field col-md-6">
     <div style="display: none;">       
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
     </div>
      <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder:"Create Password..." %>
    </div>

    <div class="field col-md-6">
    <div style="display: none;">      
      <%= f.label :password_confirmation %><br />
    </div>
      <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", placeholder:"Retype Password..." %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class:"btn btn-default" %>
  </div>
  <% end %>

  <p class="pull-right">Already have an account? <a class="btn btn-info" href="/users/sign_in" style="border: none; background-color: none; text-decoration: underline;">Sign in</a></p>

  <%#= render "users/shared/links" %>

</section>
</body>
</html>
