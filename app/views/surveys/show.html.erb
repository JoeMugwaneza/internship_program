<!DOCTYPE html>
<html>
<head>
  <% content_for :title do %>
    <title><%= @survey.name %> | Internship Program</title>
<% end %>
</head>
<body class="signup">

  <section class="col-md-6 col-xs-10 col-md-offset-3 col-xs-offset-1">
  <div class="main">  
    <div class="w3layouts_main agileinfo w3" style="font-family: 'Playfair Display', serif; font-weight: bold; font-size: 16px;">
       <h4>Report Title: <%= @survey.name %></h4>
       <h4>Reported by: <%="#{ @survey.user.first_name} #{@survey.user.last_name}" %></h4>
       <h4>Reporter Gender: <%= @survey.user.gender %></h4>
    </div>
  </div>
      <ol style="font-family: 'Playfair Display', serif;">
        <% @survey.answers.each do |answer| %>
        <li style="margin-top: 25px;">
         <div style="font-size: 16px;font-weight: bold;">
          <%= answer.question.title %><br>
         </div>
          <%= answer.content %>
       
        </li>
        <% end %>
      </ol>

    </div>
  </section>
        <%= link_to "Back", surveys_path %>


</body>
</html>

