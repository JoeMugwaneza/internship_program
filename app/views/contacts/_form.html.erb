<h4>Contact Form</h4>

          <summary>
            <%= form_for @contact do |f|%>
            <form>
              <fieldset>
                <div class="contact-input-row">

                  <label>Full Name: </label>
                  <%= f.text_field :fname, placeholder: "Eg. Joseph Mugwaneza", required: "required"%><br>
                </div>

                <div class="contact-input-row">
                  <label>Telephone:</label>
                  <%= f.number_field :phone_number, placeholder: "eg. 0780000000", required: "required" %> <br>
                </div>

                <div class="contact-input-row">                   
                  <label>Email Address: </label>
                  <%= f.email_field :email, placeholder: "Eg. mugwaneza@ryaf.rw" %> <br>
                </div>

                <div class="contact-input-row">                  
                  <label>Message</label>
                  <%= f.text_area :message, rows: 4, cols: 30, placeholder: "Type your message here.....", required: "required" %>
                </div>

              </fieldset>
              <div class="get-started-btn">                
                <button class="btn btn-default">Submit</button>
              </div>

            </form>
            <% end %>
          </summary>