<!DOCTYPE html>
<html lang="en-US">
<head>
  <% content_for :title do %>
    <title>Admin main Dashboard</title>
  <% end %>
</head>
<body>
  <main>
    
    <!-- table that filter everything and with count -->
    <section>
      <%= form_for_filterrific @filterrific do |f| %>
      <div>
        search
        <%= f.text_field(:search_query, class: 'filterrific-periodically-observed') %>
      </div>

      <div>
        District
        <%= f.select(:with_district_id, @filterrific.select_options[:with_district_id], {include_blank: '- Any -'}) %>
      </div>

      <div>
        Registered After
        <%= f.text_field(:with_created_at_gte, class: 'js-datepicker') %>
      </div>

      <div>
        Sorted by 
        <%= f.select(:sorted_by, @filterrific.select_options[:sorted_by]) %>
      </div>

      <div>
        <%= link_to('Reset Filter', reset_filterrific_url) %>
      </div>

      <%= render_filterrific_spinner %>
      <% end %>

      <%= render(partial: 'dashboards/list', locals: { applications: @applications }) %>
    </section>

    <section>
      
    </section>

    <aside>
      
    </aside>
  </main>

  <script type="text/javascript">
    $(document).ready(function(){
    $('.js-datepicker').datepicker();
  });
  </script>

</body>
</html>